{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run server.ts",
      "desc": "run my server.ts file",
      "allow": [
        "env",
        "read",
        "net"
      ],
      "env": {
        "PORT": "5000"
      }
    },
    "dev": {
      "cmd": "deno run --inspect server.ts",
      "desc": "run my server.ts file",
      "allow": [
        "env",
        "read",
        "net"
      ],
      "env": {
        "PORT": "5000"
      }
    }
  }
}